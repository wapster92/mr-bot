# Telegram bot token from BotFather
TELEGRAM_BOT_TOKEN=your_token_here

# Bot mode: "long-polling" for local dev, "webhook" for production
BOT_MODE=long-polling

# Express server port (used only in webhook mode)
PORT=3000

# Public domain that Telegram can reach (required in webhook mode)
TELEGRAM_WEBHOOK_DOMAIN=https://mr-bot.example.com

# URL path for Telegram webhook
TELEGRAM_WEBHOOK_PATH=/telegram/webhook

# Optional secret that Telegram includes in X-Telegram-Bot-Api-Secret-Token header
TELEGRAM_WEBHOOK_SECRET=

# GitLab webhook endpoint (POST from GitLab)
GITLAB_WEBHOOK_PATH=/gitlab/webhook

# Shared secret to validate X-Gitlab-Token header
GITLAB_WEBHOOK_TOKEN=supersecret

# Persist входящие GitLab webhook payload'ы в logs/gitlab-events/ (true/false)
LOG_GITLAB_EVENTS=false
# Максимальный объём папки логов (MB), старые файлы будут удаляться
LOG_GITLAB_MAX_MB=20

# Сколько апрувов нужно по умолчанию, если GitLab не присылает approvals_left/required
APPROVALS_REQUIRED_DEFAULT=2

# MongoDB connection
MONGODB_URI=mongodb+srv://user:password@example.mongodb.net/?retryWrites=true&w=majority
MONGODB_DB_NAME=mr-bot

# Jira base URL (для генерации ссылок на задачи из веток MR)
JIRA_BASE_URL=https://jira.almi-partner.ru:8443/browse
